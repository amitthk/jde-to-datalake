# Bakery Operations Data Ingestion System - Environment Configuration
# Copy this file to .env and update the values for your environment

# ==============================
# Database Configuration
# ==============================
PG_DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_NAME=bakery_operations_db

# ==============================
# JDE Configuration
# ==============================
JDE_BUSINESS_UNIT=1110
JDE_CARDEX_URL=https://your-jde-server/jderest/v3/orchestrator/JDE_CARDEX_SUMMARY
JDE_CARDEX_USERNAME=your_username
JDE_CARDEX_PASSWORD=your_password
JDE_ITEM_MASTER_UPDATES_URL=https://your-jde-server/jderest/v3/orchestrator/JDE_ITEM_MASTER_TO_BAKERY_OPS
JDE_IA_URL=https://your-jde-server/jderest/v3/orchestrator/JDE_INVENTORY_ADJUSTMENTS

# ==============================
# Bakery Operations API Configuration (replaces Bakery-System)
# ==============================
FACILITY_ID=your_facility_id
BAKERY_OPS_BASE_URL=https://your-bakery-ops-server/api/v1
BAKERY_OPS_API_TOKEN=your_bakery_ops_api_token

# ==============================
# Backend Configuration
# ==============================
BACKEND_BASE_URL=http://localhost:8000

# ==============================
# S3 Data Lake Configuration
# ==============================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=bakery-operations-data-lake
S3_BASE_PREFIX=jde-ingestion

# ==============================
# Authentication Configuration
# ==============================
SECRET_KEY=your-secret-key-change-this-in-production-must-be-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# LDAP Authentication (if using LDAP)
AUTH_LDAP_SERVER=your-ldap-server:389
AUTH_LDAP_USE_TLS=False
AUTH_LDAP_BIND_USER=your_bind_user
AUTH_LDAP_BIND_PASSWORD=your_bind_password
AUTH_LDAP_GROUP_FIELD=memberOf
AUTH_USER_SEARCH_FIELD=UserPrincipalName

# Required LDAP groups (comma-separated)
REQUIRED_GROUPS=CN=BakeryOperationsUsers,OU=Groups,DC=company,DC=com

# ==============================
# Application Configuration
# ==============================
ENVIRONMENT=development
DEBUG=True

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==============================
# Airflow Configuration (if using Airflow)
# ==============================
AIRFLOW__CORE__DAGS_FOLDER=/path/to/backend/dags
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__RBAC=True

